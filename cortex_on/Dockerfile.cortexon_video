# Dockerfile for CortexON with Video Understanding Integration
FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    ffmpeg \
    ca-certificates \
    curl \
    git \
    build-essential \
    g++ \
  && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy and install CortexON requirements first (for better caching)
COPY requirements.txt /tmp/cortexon_requirements.txt
RUN pip install --no-cache-dir -U pip \
 && pip install --no-cache-dir -r /tmp/cortexon_requirements.txt

# Install video understanding specific dependencies
RUN pip install --no-cache-dir \
    pymongo>=4.6.0 \
    yt-dlp \
    openai-whisper \
    torch \
    torchvision \
    weaviate-client>=4.9.0 \
    tiktoken \
    pillow \
    ImageHash \
    scikit-learn \
    transformers \
    opencv-python \
    sentence-transformers>=2.2.2

# Copy the CortexON application code
COPY . /app/

# Create directories for video processing
RUN mkdir -p /data/downloads /data/out /data/cache

# Expose the FastAPI port
EXPOSE 8081

# Health check
#HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
#  CMD curl -f http://localhost:8081/health || exit 1

# Start the CortexON application
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8081", "--reload"]

